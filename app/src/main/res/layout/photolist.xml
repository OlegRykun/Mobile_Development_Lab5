<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:id="@+id/scroll_photoList"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                tools:visibility="visible"
                android:id="@+id/scroll_constraint">

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/vertical_guideline_25"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.25"/>

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/vertical_guideline_50"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.50"/>

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/vertical_guideline_75"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.75"/>

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/horizontal_guideline_25"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintGuide_percent="0.25"/>

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/horizontal_guideline_50"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintGuide_percent="0.50"/>

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/horizontal_guideline_75"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintGuide_percent="0.75"/>

                <ImageView
                    android:id="@+id/image_01"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintBottom_toTopOf="@id/horizontal_guideline_25"
                    app:layout_constraintDimensionRatio="1"
                    app:layout_constraintEnd_toStartOf="@id/vertical_guideline_25"
                    app:layout_constraintStart_toStartOf="parent"
                    app:srcCompat="@drawable/color_outline"/>

                <ImageView
                    android:id="@+id/image_02"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintBottom_toTopOf="@id/horizontal_guideline_50"
                    app:layout_constraintDimensionRatio="1"
                    app:layout_constraintEnd_toStartOf="@+id/vertical_guideline_75"
                    app:layout_constraintStart_toStartOf="@id/vertical_guideline_25"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/color_outline"/>

                <ImageView
                    android:id="@+id/image_03"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintBottom_toTopOf="@id/horizontal_guideline_25"
                    app:layout_constraintDimensionRatio="1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@id/vertical_guideline_75"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/color_outline"/>

                <ImageView
                    android:id="@+id/image_04"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintBottom_toTopOf="@id/horizontal_guideline_50"
                    app:layout_constraintDimensionRatio="1"
                    app:layout_constraintEnd_toStartOf="@id/vertical_guideline_25"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@id/horizontal_guideline_25"
                    app:srcCompat="@drawable/color_outline"/>

                <ImageView
                    android:id="@+id/image_05"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintBottom_toTopOf="@id/horizontal_guideline_50"
                    app:layout_constraintDimensionRatio="1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@id/vertical_guideline_75"
                    app:layout_constraintTop_toTopOf="@id/horizontal_guideline_25"
                    app:srcCompat="@drawable/color_outline"/>

                <ImageView
                    android:id="@+id/image_06"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintDimensionRatio="1"
                    app:layout_constraintEnd_toStartOf="@id/vertical_guideline_50"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@id/horizontal_guideline_50"
                    app:srcCompat="@drawable/color_outline"/>

                <ImageView
                    android:id="@+id/image_07"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintBottom_toTopOf="@id/horizontal_guideline_75"
                    app:layout_constraintDimensionRatio="1"
                    app:layout_constraintEnd_toStartOf="@id/vertical_guideline_75"
                    app:layout_constraintStart_toStartOf="@id/vertical_guideline_50"
                    app:layout_constraintTop_toTopOf="@id/horizontal_guideline_50"
                    app:srcCompat="@drawable/color_outline"/>

                <ImageView
                    android:id="@+id/image_08"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintBottom_toTopOf="@id/horizontal_guideline_75"
                    app:layout_constraintDimensionRatio="1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@id/vertical_guideline_75"
                    app:layout_constraintTop_toTopOf="@id/horizontal_guideline_50"
                    app:srcCompat="@drawable/color_outline"/>

                <ImageView
                    android:id="@+id/image_09"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintDimensionRatio="1"
                    app:layout_constraintEnd_toStartOf="@id/vertical_guideline_75"
                    app:layout_constraintStart_toStartOf="@id/vertical_guideline_50"
                    app:layout_constraintTop_toTopOf="@id/horizontal_guideline_75"
                    app:srcCompat="@drawable/color_outline"/>

                <ImageView
                    android:id="@+id/image_10"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintDimensionRatio="1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@id/vertical_guideline_75"
                    app:layout_constraintTop_toTopOf="@id/horizontal_guideline_75"
                    app:srcCompat="@drawable/color_outline"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </ScrollView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/addPhotoButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="15dp"
        android:src="@drawable/ic_add"
        app:backgroundTint="@color/colorPrimary"
        app:rippleColor="#FFFFFF"
        app:tint="@color/colorAccent"/>
</RelativeLayout>